<h2>Funcionários</h2>

<table class="table table-striped">
	<thead>
		<tr>
			<th>#</th>
			<th>Nome</th>
			<th>Departamento</th>
			<th>Admissão</th>
			<th colspan="3"></th>
		</tr>
	</thead>
	<tbody>
<% @funcionarios.each do |funcionario| %>
		<tr>
			<td><%= funcionario.id %></td>
			<td><%= funcionario.nome  %></td>
			<td><%= funcionario.departamento.nome if funcionario.departamento %></td>
			<td><%= funcionario.admissao.strftime("%d/%m/%Y") %></td>
	    <td><%= link_to 'Exibir', funcionario %></td>
	    <td><%= link_to 'Editar', edit_funcionario_path(funcionario) %></td>
	    <td><%= link_to 'Apagar', funcionario, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
		</tr>
<% end %>
	</tbody>
</table>

<div class="form-actions">
<%= link_to 'Incluir funcionário', new_funcionario_path %>
</div>

